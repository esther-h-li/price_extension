{
    "name": "Impulse Price Checker",
    "description": "While shopping on eBay, this extension can use the current produuct you're on and find identical listings and their prices. ",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup/popup.html", 
        "default_icon": "images/money.png"
    },
    "background" : {
        "service_worker": "src/background.js"
    },
   "content_scripts": [{
    "matches": ["https://www.ebay.com/*", "https://ebay.com/*"] ,
    "js": ["src/content.js"]
}],
"host_permissions":[
    "https://www.ebay.com/*",
    "https://ebay.com/*"
]
}